{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./dist",
    "target": "es2017",
    "paths": {
      "@/*": ["src/*"]
    },
    "incremental": false,
    "removeComments": true,
    "allowJs": true,
    "noEmit": false,
    "noEmitHelpers": false,
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": ["node_modules", "test", "dist", "**/*test.ts"],
}