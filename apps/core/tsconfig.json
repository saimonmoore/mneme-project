{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "target": "es2022",
    "module": "ES2022",
    "baseUrl": ".",
    "outDir": "dist",
    "strict": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "incremental": false,
    "removeComments": true,
    "allowJs": true,
    "typeRoots": [
      "./src/@types/",
      "../../node_modules/@types/"
    ]
  },
  "include": ["src/**/*.ts", "jest.config.js", "@types/**/*.d.ts"],
}
